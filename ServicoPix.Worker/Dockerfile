FROM mcr.microsoft.com/dotnet/aspnet:10.0 AS base
ARG APP_UID=1000
USER $APP_UID
WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:10.0 AS build
ARG BUILD_CONFIGURATION=Release
WORKDIR /src

COPY ["ServicoPix.Worker/ServicoPix.Worker.csproj", "ServicoPix.Worker/"]
COPY ["NexusBus/NexusBus.csproj", "NexusBus/"]
RUN dotnet restore "./ServicoPix.Worker/ServicoPix.Worker.csproj"

COPY . .
WORKDIR "/src/ServicoPix.Worker"
RUN dotnet build "./ServicoPix.Worker.csproj" -c $BUILD_CONFIGURATION -o /app/build

FROM build AS publish
ARG BUILD_CONFIGURATION=Release
RUN dotnet publish "./ServicoPix.Worker.csproj" -c $BUILD_CONFIGURATION -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ServicoPix.Worker.dll"]
