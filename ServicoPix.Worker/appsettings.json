{
  "NexusBus": {
    "Provider": "RabbitMQ",
    "RabbitMq": {
      "HostName": "localhost",
      "Port": 5672,
      "UserName": "guest",
      "Password": "guest",
      "VirtualHost": "/",
      "RetryCount": 30,

      "ExchangeName": "",
