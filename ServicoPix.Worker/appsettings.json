      "DeclareTopology": false,

      "EnableDeadLetter": false,
      "DeadLetterExchangeName": "nexusbus.dlx",
      "DeadLetterQueueSuffix": ".dlq"
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "NexusBus": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  }
}
